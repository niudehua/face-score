/* 页面特定样式 */

.app-logo {
  width: 140rpx;
  height: 140rpx;
  margin-bottom: 20rpx;
  border-radius: 50%;
  box-shadow: none;
  border: 1rpx solid #f0f0f0;
}

/* 模式切换器 */
.mode-selector {
  display: flex;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 6rpx;
  margin: 30rpx 0;
  box-shadow: none;
}

.mode-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.2s ease;
}

.mode-item.active {
  background: white;
  color: #333;
  font-weight: 500;
  box-shadow: 0 1rpx 3rpx rgba(0,0,0,0.1);
}

/* 操作按钮容器 */
.buttons-container {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-top: 20rpx;
  width: 100%;
}

/* 次要按钮样式 */
.secondary-button {
  background: #fff !important;
  color: #666 !important;
  border: 1rpx solid #ddd !important;
  box-shadow: none !important;
}

.secondary-button:active {
  background: #f9f9f9 !important;
}

/* 功能按钮容器 */
.utility-buttons {
  display: flex;
  gap: 16rpx;
  margin-top: 16rpx;
  width: 100%;
}

.utility-buttons button {
  flex: 1;
  padding: 20rpx 24rpx;
  font-size: 26rpx;
  margin-bottom: 0;
}

/* 预览区域容器 */
.preview-container {
  position: relative;
  margin: 20rpx 0;
  border-radius: 8rpx;
  overflow: hidden;
  background: #fafafa;
  padding: 10rpx;
  box-shadow: none;
  border: 1rpx solid #eee;
}

/* 清空图片按钮 */
.clear-preview-btn {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 44rpx;
  height: 44rpx;
  background: rgba(0, 0, 0, 0.5);
  color: white;
  border: none;
  border-radius: 50%;
  font-size: 24rpx;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: none;
  transition: all 0.3s ease;
  z-index: 10;
  padding: 0;
}

.clear-preview-btn:active {
  background: rgba(0, 0, 0, 0.7);
}

/* 结果卡片样式 */
.result-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-top: 20rpx;
  box-shadow: none;
  border: 1rpx solid #eee;
  animation: fadeIn 0.4s ease-out;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10rpx); }
  to { opacity: 1; transform: translateY(0); }
}

/* 评分数字样式 */
.score-number {
  font-size: 48rpx;
  font-weight: 600;
  color: #333;
  margin: 10rpx 0;
}

/* 结果标题样式 */
.result-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

/* 结果内容样式 */
.result-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #444;
  margin-top: 16rpx;
  white-space: pre-wrap;
  text-align: left;
}

/* 加载状态样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  gap: 20rpx;
}

.loading-spinner {
  width: 50rpx;
  height: 50rpx;
  border: 4rpx solid #eee;
  border-top: 4rpx solid #333;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 26rpx;
  color: #666;
}

/* 分享和保存按钮容器 */
.action-buttons {
  display: flex;
  gap: 16rpx;
  margin-top: 24rpx;
}

.action-button {
  flex: 1;
  background: #f5f5f5;
  color: #666;
  font-size: 26rpx;
  padding: 20rpx;
  border-radius: 8rpx;
  box-shadow: none;
  border: 1rpx solid #eee;
  margin-bottom: 0;
}

.action-button.primary {
  background: #333;
  color: white;
  border: none;
  box-shadow: none;
}

.action-button:active {
  opacity: 0.9;
  transform: none;
}

/* 提示信息样式 */
.toast {
  background: rgba(0, 0, 0, 0.85);
  border-radius: 8rpx;
  box-shadow: none;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 20rpx;
  color: #ccc;
  text-align: center;
}

.empty-state-icon {
  font-size: 80rpx;
  opacity: 0.5;
  margin-bottom: 20rpx;
}

.empty-state-text {
  font-size: 26rpx;
  line-height: 1.5;
  color: #999;
}

/* 响应式设计 */
@media (min-width: 750rpx) {
  .container {
    max-width: 600rpx;
    padding: 60rpx 50rpx;
  }
}

/* 深色模式支持 */
@media (prefers-color-scheme: dark) {
  .container {
    background: #1a1a1a;
    border: 1rpx solid #333;
  }
  
  h1 {
    color: #eee;
  }
  
  p {
    color: #999;
  }
  
  .mode-selector {
    background: #2a2a2a;
  }
  
  .mode-item {
    color: #888;
  }
  
  .mode-item.active {
    background: #444;
    color: #fff;
  }
  
  .result-card {
    background: #2a2a2a;
    border-color: #333;
  }
  
  .result-title {
    color: #eee;
  }
  
  .result-content {
    color: #ccc;
  }
  
  .score-number {
    color: #fff;
  }
  
  .preview-container {
    background: #222;
    border-color: #333;
  }
  
  .secondary-button {
    background: #222 !important;
    color: #ccc !important;
    border-color: #444 !important;
  }
  
  .action-button {
    background: #222;
    color: #ccc;
    border-color: #444;
  }
  
  button {
    background: #444;
  }
  
  .action-button.primary {
    background: #555;
  }
}