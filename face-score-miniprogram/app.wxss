/* app.wxss - 全局样式 */
/* 动画定义 */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes scaleIn {
  from { opacity: 0; transform: scale(0.9); }
  to { opacity: 1; transform: scale(1); }
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

/* 全局样式重置 */
view, text, button, image, input, textarea, swiper, swiper-item {
  box-sizing: border-box;
}

page {
  font-family: "PingFang SC", "Helvetica Neue", Helvetica, Arial, sans-serif;
  background: #f8f9fa;
  color: #333;
  min-height: 100vh;
  padding: 20rpx;
}

.container {
  background: #FFFFFF;
  padding: 40rpx 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  text-align: center;
  max-width: 600rpx;
  margin: 40rpx auto;
  border: 1rpx solid #eee;
}

/* 标题样式 */
h1 {
  color: #333;
  margin-top: 0;
  font-size: 40rpx;
  margin-bottom: 16rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

/* 副标题样式 */
p {
  margin: 0 0 40rpx;
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  font-weight: 400;
}

/* 按钮基础样式 */
button {
  background: #333;
  color: white;
  border: none;
  padding: 24rpx 48rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  cursor: pointer;
  width: 100%;
  margin-bottom: 20rpx;
  box-shadow: none;
  transition: all 0.2s ease;
  position: relative;
  overflow: hidden;
}

button:active {
  transform: scale(0.98);
  opacity: 0.9;
}

button:disabled {
  background: #ccc;
  color: #fff;
  opacity: 0.8;
  transform: none;
}

/* 预览图片样式 */
#preview {
  max-width: 100%;
  max-height: 300rpx;
  margin: 24rpx auto;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  object-fit: cover;
  display: none;
  border: 1rpx solid #eee;
}

#preview.show {
  display: block;
}

/* 结果显示样式 */
#result {
  margin-top: 24rpx;
  font-size: 28rpx;
  font-weight: 400;
  min-height: 60rpx;
  color: #333;
  word-break: break-word;
  white-space: pre-wrap;
  text-align: left;
  padding: 24rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
  box-shadow: none;
  border: 1rpx solid #eee;
  line-height: 1.6;
}

/* 装饰元素 */
.decorative-cat {
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  opacity: 0.1;
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
}

/* 辅助类 */
.text-center { text-align: center; }
.text-left { text-align: left; }
.mt-20 { margin-top: 20rpx; }
.mb-20 { margin-bottom: 20rpx; }
.flex { display: flex; }
.flex-col { flex-direction: column; }
.items-center { align-items: center; }
.justify-center { justify-content: center; }
.gap-10 { gap: 10rpx; }
.gap-20 { gap: 20rpx; }